<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_margin="@dimen/grid_example_item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/grid_example_linear_padding"
        android:paddingRight="@dimen/grid_example_linear_padding">

        <Button
            android:id="@+id/grid_example_item_add_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/grid_example_item_add_to"/>

        <Button
            android:id="@+id/grid_example_item_set"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/grid_example_item_set"/>

    </LinearLayout>

    <TextView
        android:id="@+id/grid_example_item_tittle"
        android:layout_width="@dimen/grid_example_item_tittle_second_width_height"
        android:layout_height="@dimen/grid_example_item_tittle_second_width_height"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/grid_example_tittle_bg"
        android:gravity="center"/>

</android.support.v7.widget.CardView>