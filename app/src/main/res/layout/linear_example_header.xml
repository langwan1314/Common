<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/linear_example_item_height"
    android:layout_margin="@dimen/linear_example_header_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/linear_example_item_padding_left_right"
        android:paddingRight="@dimen/linear_example_item_padding_left_right"
        android:weightSum="3">

        <Button
            android:id="@+id/linear_example_header_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/linear_example_header_add"/>

        <TextView
            android:id="@+id/linear_example_header_tittle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>

        <Button
            android:id="@+id/linear_example_header_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/linear_example_header_clear"/>

    </LinearLayout>
</android.support.v7.widget.CardView>